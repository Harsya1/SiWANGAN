<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBgProfile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_bg_profile3" />

        <Button
            android:id="@+id/backButton3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:contentDescription="button back untuk kembali ke halaman sebelumnya"
            android:background="@drawable/btn_back_transparant"/>

        <!-- Judul Profil -->
        <TextView
            android:id="@+id/profileTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_marginStart="16dp"
            android:text="Profile Anda"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="70dp"
            android:layout_marginTop="116dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/profileIcon3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:src="@drawable/img_profile_picture"
                android:contentDescription="Foto profil pengguna"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/profileName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="245dp"
            android:text="Nama Profile"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textInstruksi3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="300dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:text="Berikut ini adalah informasi data diri anda. Harap lengkapi data diri sesuai dengan identitas asli anda"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="320dp"
        android:contentDescription="button untuk edit profile"
        android:layout_below="@id/textInstruksi3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_edit_profile" />

    <!-- CardView untuk Form -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dataCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:id="@+id/labelNamaLengkap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Lengkap"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/valueNamaLengkap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelNamaLengkap"
                    android:text="Nama Lengkap Akun"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/labelNomorTelepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor Telepon"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/valueNomorTelepon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelNomorTelepon"
                    android:text="Nomor Telepon Akun"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/labelAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/valueAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelAlamat"
                android:text="Alamat Lengkap Akun"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/labelJenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/valueJenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelJenisKelamin"
                android:text="Nomor Telepon Akun"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <!-- Tambahkan blok serupa untuk Alamat dan Jenis Kelamin -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnHapusAkun"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="button untuk hapus akun"
        android:background="@drawable/btn_hapus_akun" />
</LinearLayout>