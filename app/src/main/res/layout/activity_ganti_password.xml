<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp"
    tools:context=".Activity.GantiPasswordActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBgProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_bg_profile3" />

        <Button
            android:id="@+id/backButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:contentDescription="button back untuk kembali ke halaman sebelumnya"
            android:background="@drawable/btn_back_transparant"/>

        <!-- Judul Profil -->
        <TextView
            android:id="@+id/profileTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="75dp"
            android:layout_marginStart="16dp"
            android:text="Ganti Password"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileIcon2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="235dp"
            android:src="@drawable/img_profile_picture" />

        <TextView
            android:id="@+id/profileName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="245dp"
            android:text="Nama Profile"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textInstruksi2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="300dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:text="Jangan Bagikan password anda demi keamanan data anda dan simpanlah dengan baik password baru akun anda"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- CardView untuk Form -->
    <androidx.cardview.widget.CardView
        android:id="@+id/dataCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        app:cardBackgroundColor="#EAEAEA"
        app:cardCornerRadius="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password saat ini"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <!-- EditText Nama Lengkap -->
            <EditText
                android:id="@+id/pwSaatIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_corners_white"
                android:inputType="textPassword"
                android:padding="12dp"
                android:hint="Masukkan password"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password baru"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <!-- EditText Nomor Telepon -->
            <EditText
                android:id="@+id/pwBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_corners_white"
                android:inputType="textPassword"
                android:padding="12dp"
                android:hint="Masukkan Password Baru"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulangi password baru"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp" />

            <!-- EditText Alamat -->
            <EditText
                android:id="@+id/ulangiPwBaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_corners_white"
                android:inputType="textPassword"
                android:padding="12dp"
                android:hint="Ulangi Password"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnGantiPw"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_blue"
        android:text="Perbarui Password"
        android:textColor="#FFFFFF" />
</LinearLayout>