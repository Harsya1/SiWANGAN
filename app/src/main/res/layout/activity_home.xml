<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_siwangan"
            android:contentDescription="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat datang"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage"/>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"/>

        <!-- Search Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/userName">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:theme="@style/ThemeOverlay.MaterialComponents.Light"
                android:backgroundTint="@color/white"
                android:forceDarkAllowed="false">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_marginStart="8dp"
                    app:tint="@color/hint_light" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Info terbaru, berita, lokasi"
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:textColorHint="@color/hint_light"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Image Slider -->
        <androidx.cardview.widget.CardView
            android:id="@+id/sliderContainer_card"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/searchContainer">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>


        <!-- Slider Indicators -->
        <LinearLayout
            android:id="@+id/sliderIndicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/sliderContainer_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_active"
                android:layout_margin="4dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="4dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="4dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="4dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_inactive"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Recommendations Section -->
        <TextView
            android:id="@+id/recommendationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rekomendasi Layanan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sliderIndicators"/>

        <TextView
            android:id="@+id/seeAllText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selengkapnya"
            android:textSize="14sp"
            android:textColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/recommendationTitle"
            app:layout_constraintBottom_toBottomOf="@id/recommendationTitle"/>

        <!-- Recommendation Cards -->
        <LinearLayout
            android:id="@+id/recommendationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light"
            android:backgroundTint="@color/white"
            android:forceDarkAllowed="false"
            app:layout_constraintTop_toBottomOf="@id/recommendationTitle">

            <include layout="@layout/item_recommendation"/>
            <include layout="@layout/item_recommendation"/>
        </LinearLayout>

        <!-- UMKM Section -->
        <TextView
            android:id="@+id/umkmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jelajahi UMKM Kami"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recommendationContainer"/>

        <!-- UMKM Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/umkmTitle">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kedai Make"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:padding="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Warung Bakso Pak Man"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:padding="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
