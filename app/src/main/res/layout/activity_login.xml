<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Activity.LoginActivity">

    <ImageButton
        android:id="@+id/backButton2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:padding="6dp"
        android:src="@drawable/btn_back"
        android:contentDescription="Tombol Kembali"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rightImageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_mitra"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewContainer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang"
                android:textSize="35dp"
                android:textColor="#333333"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"/>

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gunakan nomor telepon anda dan password untuk login."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/phoneInput2"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="Nomor Telepon"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/icn_telepon"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/pwInput"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_corners"
                android:drawableLeft="@drawable/icn_password"
                android:drawablePadding="12dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>


            <Button
                android:id="@+id/loginButton"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Login"
                android:textColor="#FFFFFF"
                android:background="@drawable/round_button_blue"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/googleLoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atau login dengan"
                android:textColor="#777777"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <ImageButton
                android:id="@+id/googleLoginButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:src="@drawable/btn_login_google"
                android:contentDescription="Login dengan Google"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginBottom="60dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>