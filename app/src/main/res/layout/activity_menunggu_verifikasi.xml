<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp"
    tools:context=".MenungguVerifikasiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBgProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_bg_profile2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/accountTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginStart="60dp"
            android:text="Menunggu Verifikasi"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:layout_margin="50dp"
        android:layout_weight="1"
        android:justificationMode="inter_word"
        android:text="Unduh aplikasi kami dan dapatkan akses mudah ke informasi seputar Wisata Air Panas Kepulungan. Temukan beragam pilihan penginapan, kuliner khas, serta aktivitas menarik yang bisa Anda lakukan. Dukung UMKM lokal dan jadikan liburan Anda semakin berkesan. Aplikasi ini merupakan hasil kerja sama antara mahasiswa Politeknik Negeri Jember dan pengelola wisata, serta didukung penuh oleh Kepala Desa Kepulungan."
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonKembali"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_rounded_blue"
        android:text="Beranda"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/footerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_footer_tentang_akun2"
        android:scaleType="fitXY" />
</LinearLayout>
