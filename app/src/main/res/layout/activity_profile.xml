<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBgProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_bg_profile" />

        <!-- Judul Profil -->
        <TextView
            android:id="@+id/profileTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <!-- Ikon Profil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewProfileIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="70dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img_profile_picture" />
        </androidx.cardview.widget.CardView>

        <!-- Nama Profil -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewProfileIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:text="Nama Profil"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- Menu Profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_marginTop="30dp">

        <!-- Menu Item -->
        <LinearLayout
            android:id="@+id/LihatProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icn_lihat_profile" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lihat Profil"
                android:layout_marginStart="16dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonLihatProfile"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:contentDescription="Lihat Profil" />
        </LinearLayout>

        <!-- Ganti Password -->
        <LinearLayout
            android:id="@+id/GantiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icn_ganti_password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Ganti Password"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonGantiPassword"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:contentDescription="Ganti Password" />
        </LinearLayout>

        <!-- Tiket Pesanan -->
        <LinearLayout
            android:id="@+id/TiketPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tiket" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Tiket Pesanan Anda"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttontiketPesanan"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:contentDescription="Ganti Password" />
        </LinearLayout>

        <!-- Riwayat Pemesanan -->
        <LinearLayout
            android:id="@+id/RiwayatPemesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="Riwayat Pemesanan"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonRiwayatPemesanan"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:contentDescription="Lihat Riwayat" />
        </LinearLayout>

        <!-- Tentang Aplikasi -->
        <LinearLayout
            android:id="@+id/TentangAplikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icn_tentang_aplikasi" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Tentang Aplikasi"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonTentangAplikasi"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:contentDescription="Tentang Aplikasi" />
        </LinearLayout>

        <!-- Keluar Akun -->
        <LinearLayout
            android:id="@+id/KeluarAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="logoutPage">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icn_keluar_akun" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Keluar Akun"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonKeluarAkun"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_next_right"
                android:onClick="logoutPage"
                android:contentDescription="Keluar Akun" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>