<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="0dp">

    <!-- Bagian Header dengan Gambar Latar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageBgProfile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_bg_profile2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <!-- Judul Tentang Aplikasi -->
        <TextView
            android:id="@+id/accountTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="65dp"
            android:layout_marginStart="16dp"
            android:text="Tentang Aplikasi"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Deskripsi Tentang Aplikasi -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Unduh aplikasi kami dan dapatkan akses mudah ke informasi seputar Wisata Air Panas Kepulungan. Temukan beragam pilihan penginapan, kuliner khas, serta aktivitas menarik yang bisa Anda lakukan. Dukung UMKM lokal dan jadikan liburan Anda semakin berkesan. Aplikasi ini merupakan hasil kerja sama antara mahasiswa Politeknik Negeri Jember dan pengelola wisata, serta didukung penuh oleh Kepala Desa Kepulungan."
        android:textColor="#000000"
        android:textSize="16sp"
        android:justificationMode="inter_word"/>

</LinearLayout>
