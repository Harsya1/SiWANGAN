<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Service Name -->
        <TextView
            android:id="@+id/serviceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Layanan"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="16dp"/>

        <!-- Operating Hours Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hari Operasional | Jam Operasional"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"/>

            <TextView
                android:id="@+id/operatingHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="SENIN - SABTU 0800-2000"
                android:textColor="@color/textSecondary"/>
        </LinearLayout>

        <!-- Description Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/description1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam condimentum ornare est vitae ac. Sagittis hendrerit."
            android:textColor="@color/textSecondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="In parturient montes, nascetur ridiculus mus."
            android:textColor="@color/textSecondary"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/description3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Nunc tempor urna."
            android:textColor="@color/textSecondary"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
